package part6;

public class ReverseEachSegmentUsingString {
	public static void main(String[] args) {
		//Expected output = emoclew:lla:ot:ym:emoh

		String inputValueString = "welcome:all:to:my:home";
		String[] arrayOfInput  =	inputValueString.split(":");
		String resultString = "";
		
		for(int i=0; i<arrayOfInput.length;i++) {
			String reversedString = "";
			for(int j=arrayOfInput[i].length()-1;j>=0;j--) {
				reversedString+= arrayOfInput[i].charAt(j);
			}
			resultString+= reversedString;

			if(i<arrayOfInput.length-1) {
				resultString+=":";
			}
		}
		
		System.out.println(resultString);
	
		
		
	}

}
